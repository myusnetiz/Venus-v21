<html>

	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>avero</title>
		<link rel="stylesheet" href="style.css" type="text">
		<style>
			body,
			.background,
			.light,
			.grain {
			  width: 100%;
			  height: 100%;
			  margin: 0;
			  padding: 0; }
			
			.background {
			  position: fixed;
			  background: #192125; }
			
			.light {
			  position: fixed;
			  opacity: 0.0;
			  transition: opacity 1s ease-out;
			  background: -webkit-radial-gradient(50% 45%, circle farthest-corner, #677d8e, #192125); }
			
			.loaded .light {
			  opacity: 1.0; }
			
			.canvas {
			  position: absolute;
			  top: 50%;
			  left: 50%;
			  height: 50px;
			  width: 200px;
			  margin: -25px 0 0 -100px; }
			
			.image {
			  position: absolute;
			  width: 100%;
			  height: 100%;
			  top: 0;
			  right: 0; }
			
			.grain {
			  position: fixed;
			  background-image: url("grain.png"); }
			
			
		
		</style>
		
		
		
		
	</head>
	
	<body>
		<div class="background"></div>
		<div class="light"></div>
		<div class="canvas">
			<img class="image" src="logo.png">
		</div>
		<div class="grain"></div>
		<script>
			window.onload = function(){
			    document.body.setAttribute("class","loaded");
			}
		</script>
	</body>

</html>
